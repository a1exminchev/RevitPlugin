<Window x:Class="MyWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyWPF"
        mc:Ignorable="d"
        Title="My simple calculator
" Height="325" Width="410">
    <Grid>
        <Button x:Name="but" Content="Calculate" HorizontalAlignment="Left" Margin="138,111,0,0" VerticalAlignment="Top" Width="171" Click="but_Click" Height="70"/>
        <RadioButton x:Name="plusBtn" Content="+" HorizontalAlignment="Left" Margin="210,73,0,0" VerticalAlignment="Top" IsChecked="True"/>
        <RadioButton x:Name="minusBtn" Content="-" HorizontalAlignment="Left" Margin="210,53,0,0" VerticalAlignment="Top" Checked="minusBtn_Checked"/>
        <RadioButton x:Name="plusBtn_Copy" Content="Нет" HorizontalAlignment="Left" Margin="210,91,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
